<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
 	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <package name="default" namespace="/" extends="struts-default">
        <action name="person_*" class="com.baidu.action.PersonAction" method="{1}">
           <result name="list">/index.jsp</result>
           <result name="add" type="redirectAction">person_list</result>
           <result name="delete" type="redirectAction" >person_list</result>
           <result name="toadd">/add.jsp</result>
           <result name="toupdate">/update.jsp</result>
           <result name="update" type="redirectAction" >person_list</result>
        </action>
    </package>
</struts>
